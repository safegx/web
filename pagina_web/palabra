<div class="container" role="main" aria-live="polite" aria-atomic="true">
  <div id="rotatingRect" class="rotating-rect" aria-label="Palabra en español">
    ¡Presiona 'Nueva palabra'!
  </div>

  <button class="btn-new-word" id="newWordBtn" aria-describedby="desc-new-word">Nueva palabra</button>

  <div id="desc-new-word" class="visually-hidden">Al pulsar, genera una nueva palabra española con traducción en inglés y japonés</div>

  <div id="resultContainer" style="margin-top: 40px; min-height: 160px;">
    <div id="spanishWord" class="word-spanish" aria-live="polite" aria-atomic="true"></div>
    <div id="translations" aria-live="polite" aria-atomic="true">
      <div id="englishWord" class="word-translation"></div>
      <div id="japaneseWord" class="word-translation"></div>
    </div>
  </div>
</div>

<script>
  const rotatingRect = document.getElementById('rotatingRect');
  const newWordBtn = document.getElementById('newWordBtn');
  const spanishWordEl = document.getElementById('spanishWord');
  const englishWordEl = document.getElementById('englishWord');
  const japaneseWordEl = document.getElementById('japaneseWord');
  const container = document.querySelector('.container');

  // Lista de palabras españolas con traducciones
  const words = [
    { es: 'Mariposa', en: 'Butterfly', jp: 'チョウ' },
    { es: 'Amor', en: 'Love', jp: '愛 (あい)' },
    { es: 'Sol', en: 'Sun', jp: '太陽 (たいよう)' },
    { es: 'Lluvia', en: 'Rain', jp: '雨 (あめ)' },
    { es: 'Casa', en: 'House', jp: '家 (いえ)' },
    { es: 'Música', en: 'Music', jp: '音楽 (おんがく)' },
    { es: 'Felicidad', en: 'Happiness', jp: '幸福 (こうふく)' },
    { es: 'Paz', en: 'Peace', jp: '平和 (へいわ)' },
    { es: 'Libro', en: 'Book', jp: '本 (ほん)' },
    { es: 'Amigo', en: 'Friend', jp: '友達 (ともだち)' },
    // Puedes añadir más palabras aquí
  ];

  function createScreenFlash() {
    const flash = document.createElement('div');
    flash.classList.add('screen-flash');
    document.body.appendChild(flash);
    flash.addEventListener('animationend', () => flash.remove());
  }

  function animateWordAppearance(wordObj) {
    // Mostrar palabra en el rectángulo
    rotatingRect.textContent = '';

    // Efecto de caída con rebote
    spanishWordEl.textContent = wordObj.es;
    englishWordEl.textContent = wordObj.en;
    japaneseWordEl.textContent = wordObj.jp;

    spanishWordEl.classList.remove('show');
    englishWordEl.classList.remove('show');
    japaneseWordEl.classList.remove('show');

    // Posiciones iniciales ocultas (ya en CSS)
    setTimeout(() => {
      spanishWordEl.classList.add('show');
      englishWordEl.classList.add('show');
      japaneseWordEl.classList.add('show');
    }, 100);
  }

  newWordBtn.addEventListener('click', () => {
    // Elige palabra random
    const randomIndex = Math.floor(Math.random() * words.length);
    const wordObj = words[randomIndex];

    // Agrega clase para rotar
    rotatingRect.classList.add('rotating');

    // Cuando termine rotación:
    rotatingRect.addEventListener('animationend', function onAnimationEnd() {
      rotatingRect.classList.remove('rotating');
      rotatingRect.removeEventListener('animationend', onAnimationEnd);

      // Crear flash de pantalla
      createScreenFlash();

      // Mostrar y animar palabra
      animateWordAppearance(wordObj);
    }, { once: true });
  });
</script>

